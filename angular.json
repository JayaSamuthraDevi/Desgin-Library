{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "projects": {
    "carbon-angular": {
      "projectType": "library",
      "root": "projects/carbon-angular",
      "sourceRoot": "projects/carbon-angular/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "project": "projects/carbon-angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/carbon-angular/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/carbon-angular/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/carbon-angular/tsconfig.spec.json"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/carbon-angular/.storybook",
            "browserTarget": "carbon-angular:build",
            "port": 6006,
             "styles": [
              "projects/carbon-angular/src/styles/carbon.scss"
            ]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/carbon-angular/.storybook",
            "browserTarget": "carbon-angular:build",
            "outputDir": "dist/storybook/carbon-angular",
             "styles": [
              "projects/carbon-angular/src/styles/carbon.scss"
            ]
          }
        }
      }
    }
  }
}
